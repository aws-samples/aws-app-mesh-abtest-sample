<div id="product-detail" class="jumbotron jumbotron-fluid rounded">
    <div class="container">
        <form method="POST" action="/cart">
            <input type="hidden" name="product_id" value="{{product.id}}">
            <h1 class="display-2">{{product.name}}</h1>
            <div class="row">
                <div class="col">
                    <img class="card-img-top img-thumbnail" style="width:600px; height:350px" src="{{imageservice}}/{{product.picture}}?width=600&height=350"
                        alt="{{product.name}}">
                </div>
                <div class="col">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header">
                            Product Details
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center lead">
                                {{product.description}}
                            </div>
                            <hr />
                            <h6 class="card-subtitle mb-2 text-muted">Info</h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <p>Made by: {{product.manufacturer}}</p>
                            </div>
                            <button type="submit" class="btn btn-outline-success my-2 my-sm-0">Buy -
                                ${{product.offer.price}}</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

{{>recommendationPartial}}